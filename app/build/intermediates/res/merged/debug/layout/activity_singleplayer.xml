<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_singleplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background2"
    tools:context="helix.thehangman.SingleplayerActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/øversteLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="189dp"
                android:layout_height="253dp"
                app:srcCompat="@drawable/gallow"
                android:id="@+id/gallow" />
        </LinearLayout>

        <ImageView
            android:layout_width="103dp"
            android:gravity="bottom|center_horizontal"
            android:layout_height="144dp"
            app:srcCompat="@drawable/executioner"
            android:id="@+id/imageView10"
            android:layout_alignParentTop="true"
            android:layout_marginTop="103dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textColor="#212121"
            android:layout_height="wrap_content"
            android:id="@+id/triesLeft"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="normal|bold"
            android:layout_width="150dp"
            android:textAlignment="textEnd" />

        <Chronometer
            android:id="@+id/chronometer1"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:layout_below="@+id/triesLeft"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/bubble"
            android:id="@+id/bubble"
            android:layout_below="@+id/triesLeft"
            android:layout_toLeftOf="@+id/chronometer1"
            android:layout_toStartOf="@+id/chronometer1"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/nedersteLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:text="A"
                android:id="@+id/A"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:text="B"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/B"
                android:layout_weight="1" />

            <Button
                android:text="C"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/C"
                android:layout_weight="1" />

            <Button
                android:text="D"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/D"
                android:layout_weight="1" />

            <Button
                android:text="E"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/E"
                android:layout_weight="1" />

            <Button
                android:text="F"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/F"
                android:layout_weight="1" />

            <Button
                android:text="G"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/G"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="H"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/H"
                android:layout_weight="1" />

            <Button
                android:text="I"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/I"
                android:layout_weight="1" />

            <Button
                android:text="J"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/J"
                android:layout_weight="1" />

            <Button
                android:text="K"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/K"
                android:layout_weight="1" />

            <Button
                android:text="L"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/L"
                android:layout_weight="1" />

            <Button
                android:text="M"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/M"
                android:layout_weight="1" />

            <Button
                android:text="N"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/N"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <Button
                android:text="O"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/O"
                android:layout_weight="1" />

            <Button
                android:text="P"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/P"
                android:layout_weight="1" />

            <Button
                android:text="Q"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/Q"
                android:layout_weight="1" />

            <Button
                android:text="R"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/R_letter"
                android:layout_weight="1" />

            <Button
                android:text="S"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/S"
                android:layout_weight="1" />

            <Button
                android:text="T"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/T"
                android:layout_weight="1" />

            <Button
                android:textSize="20sp"
                android:text="U"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/U"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="V"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/V"
                android:layout_weight="1" />

            <Button
                android:text="W"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/W"
                android:layout_weight="1" />

            <Button
                android:text="X"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/X"
                android:layout_weight="1" />

            <Button
                android:text="Y"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/Y"
                android:layout_weight="1" />

            <Button
                android:text="Z"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/Z"
                android:layout_weight="1" />

            <Button
                android:text="Æ"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/Æ"
                android:layout_weight="1" />

            <Button
                android:text="Ø"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/Ø"
                android:layout_weight="1" />

            <Button
                android:text="Å"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/Å"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/øversteLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp">

        <TextView
            android:textColor="#212121"
            android:text="Gæt nedenstående ord."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:textColor="#212121"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wordToGuess"
            android:textSize="24sp"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center" />
    </LinearLayout>


</RelativeLayout>
