<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/texture_background"
    tools:context="helix.thehangman.CategoryFragment">



    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:background="#727272"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="Vælg kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_lbl"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="#000000" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="DYREARTER"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/animals_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="BILMÆRKER"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cars_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="FØDEVARER"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/foods_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />


            <TextView
                android:text="DRENGENAVNE"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/malenames_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="PIGENAVNE"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/girlnames_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="BYER"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cities_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="LANDE"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/countries_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="SPORTSGRENE"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sports_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:text="COMPUTERMÆRKER"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/computers_lbl"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
