<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="helix.thehangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hangman_logo4"
        android:label="Hangman"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="helix.thehangman.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="helix.thehangman.SingleplayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="helix.thehangman.OptionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="helix.thehangman.ScoreboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="helix.thehangman.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>