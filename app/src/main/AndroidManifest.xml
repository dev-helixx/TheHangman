<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="helix.thehangman">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hangman_logo4"
        android:label="Hangman"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".frontend.activities.Splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".frontend.activities.SingleplayerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".frontend.activities.OptionsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".frontend.activities.ScoreboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".frontend.activities.MainActivity"
            android:screenOrientation="portrait"/>
    </application>



</manifest>